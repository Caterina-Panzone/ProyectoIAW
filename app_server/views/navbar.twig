<header class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"> <img id="imagenLogo" alt="Logo" src="images/llaveRosa.png" class="iconoBox"></a>
        </div>
        <!-- Collection of nav links, forms, and other content for toggling -->
        <div id="navbarCollapse" class="collapse navbar-collapse">
            {% if activemenu == 'buildings-list' %}
                <form class="navbar-form navbar-left">
                    <div class="input-group">
                        <input type="search" class="form-control" placeholder="Búsqueda por palabra">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default btnOscuro">Buscar</button>
                        </span>
                    </div>
                </form>
            {% endif %} 
            <ul class="nav navbar-nav navbar-right">
                {# {% if user==null %} #}
                    <li><a href='#' data-toggle="modal" data-target="#loginModal">Iniciar sesión</a></li>
                {# {% else %} #}
                    {# <li><a href='/logout'>Cerrar sesión</a></li> #}
                    {# <li><a href='/unlink'>Eliminar cuenta</a></li> #}
                {# {% endif %}} #}
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href='#'> Estilos <b class="caret"></b></a>
                    <ul id="seleccionarEstilo" class="dropdown-menu">
                        <li><a onClick="cambiarEstilo('Rosa'); modificarEstiloLocalStorage()">Rosa</a></li>
                        <li class="divider"> </li>
                        <li><a onClick="cambiarEstilo('Azul'); modificarEstiloLocalStorage()">Azul</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</header>

{# {% if user==null %} #}
    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title text-center">Iniciar sesión</h4>
                </div>
                <div class="modal-body center-block">
                    <a class="btn btn-block btn-social btn-github" href='/users/auth/github'>
                        <span class="fa fa-github"></span>
                        Iniciar Sesión con GitHub
                    </a>
                    <a class="btn btn-block btn-social btn-google" href='/auth/google'>
                        <span class="fa fa-google"></span>
                        Iniciar Sesión con Google
                    </a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btnOscuro center-block" data-dismiss="modal">
                        Cerrar
                    </button>
                </div>  
            </div>
        </div>
    </div>
{# {% endif %} #}